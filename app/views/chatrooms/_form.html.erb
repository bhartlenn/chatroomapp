<%= form_with(model: chatroom, id: "#{dom_id(chatroom)}_form", class: "chatroom_form") do |form| %>
  
  <% if chatroom.errors.any? %>
    <div class="errors-container">
      <ul class="errors">
        <% chatroom.errors.each do |error| %>
          <li class="error"><span class="material-icons">warning</span><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= link_to "cancel", chatrooms_path, class: "material-icons btn" %>
    <%= form.submit value: "done", class: "material-icons" %>
  </div>
<% end %>
