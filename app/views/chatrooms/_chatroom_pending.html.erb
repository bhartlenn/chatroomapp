<%= turbo_frame_tag chatroom_pending do %>
  <article class="chatroom_card"  title="<%= chatroom_pending.description %>">
    
    <div class="chatroom_card_content">
      <h3 class="chatroom_card_title"><%= chatroom_pending.name %></h3>
      <p>Owner: <%= chatroom_pending.owner.username %></p>
      <p>
        <%= chatroom_pending.joined_users.size+1 %>
        <span class="material-icons">group</span>
      </p>
    </div>

    <div class="actions">
      <%= button_to "check", 
              chatroom_accept_invitation_path(chatroom_pending), 
              method: :put, 
              class: "material-icons-outlined",
              title: "Accept Invitation" %>
      <%= button_to "close", 
              chatroom_decline_invitation_path(chatroom_pending), 
              method: :put, 
              class: "material-icons-outlined",
              title: "Decline Invitation" %>          
    </div>

  </article>
<% end %>